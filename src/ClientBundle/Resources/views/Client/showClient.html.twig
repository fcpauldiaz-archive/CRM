{% block body -%}
    <h1>Cliente</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity[0]}}</td>
            </tr>
            <tr>
                <th>NIT</th>
