                {% endif %}
            </tr>
            <tr>
                <th>Tipo Membresia</th>
                {% if entity[14] is defined %}
                    <td>{{ entity[14] }}</td>
                {% else %}
                    <td></td>
                {% endif %}
            </tr>
             <tr>
                <th>Ingresado Por</th>
                {% if entity[15] is defined %}
                     <td>{{ entity[15] }}</td>
                {% else %}
                    <td></td>
                {% endif %}
               
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="btn btn-primary "href="{{ path('cliente') }}">
            Ver todos
        </a>
    </li>
    <li>
