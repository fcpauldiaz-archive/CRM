{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listado de Ventas</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Total Venta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('venta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.total }}</td>
                <td>
                <ul>
                    <li>
                        <a class ="btn btn-xs btn-info "href="{{ path('venta_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a class="btn btn-xs btn-danger" href="{{ path('venta_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-primary btn-block" href="{{ path('venta_new') }}">
               Crear nueva Venta
            </a>
        </li>
    </ul>
    {% endblock %}