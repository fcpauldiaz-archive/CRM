{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listado de Telefonos</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Telefono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('telefono_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero_telefono }}</td>
                <td>
                <ul>
                    <li>
                        <a class ="btn btn-xs btn-info "href="{{ path('telefono_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a class="btn btn-xs btn-danger" href="{{ path('telefono_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-primary btn-block" href="{{ path('telefono_new') }}">
               Crear nuevo Telefono
            </a>
        </li>
    </ul>
    {% endblock %}