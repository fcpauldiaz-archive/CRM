{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reportes de Resumen</h1>
    <h2>Top 5 productos</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Total</th>
                <th>Cantidad producto</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in top5 %}
            <tr>
                <td>{{ entity.0 }}</td>
                <td>{{ entity.1 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2>Top cliente</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cantidad de Ventas</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in top_cliente %}
            <tr>
                <td>{{ entity.0 }}</td>
                <td>{{ entity.1 }}</td>
                <td>{{ entity.0 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2>Compras por membresia</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo de Membresia</th>
                <th>Cantidad de Ventas</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in compra_cliente_membresia %}
            <tr>
                <td>{{ entity.0 }}</td>
                <td>{{ entity.1 }}</td>
                <td>{{ entity.0 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2>Total compras por cliente</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Total Vendido</th>
                <th>Nombres</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in total_por_cliente %}
            <tr>
                <td>{{ entity.0 }}</td>
                <td>{{ entity.1 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2>Ventas mayores a 100</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Total producto</th>
                <th>Producto</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in ventas_mayor %}
            <tr>
                <td>{{ entity.0 }}</td>
                <td>{{ entity.1 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}